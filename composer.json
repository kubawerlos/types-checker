{
    "name": "kubawerlos/types-checker",
    "type": "library",
    "description": "A tool to find missing type declarations in PHP 7 code",
    "license": "MIT",
    "authors": [
        {
            "name": "Kuba Wer≈Ços",
            "email": "werlos@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-tokenizer": "*",
        "symfony/console": "^3.4 || ^4.0 || ^5.0",
        "symfony/finder": "^3.4 || ^4.0 || ^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5.2 || ^9.0.1"
    },
    "autoload": {
        "psr-4": {
            "TypesChecker\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Stub\\": "tests/_stubs/",
            "Tests\\": "tests"
        }
    },
    "bin": [
        "types-checker"
    ],
    "scripts": {
        "analyse": [
            "@install-dev-tools",
            "composer --working-dir=.dev-tools analyse",
            "./types-checker src"
        ],
        "fix": [
            "@install-dev-tools",
            "composer --working-dir=.dev-tools fix"
        ],
        "install-dev-tools": [
            "composer --working-dir=.dev-tools install"
        ],
        "test": [
            "phpunit"
        ],
        "verify": [
            "@analyse",
            "@test"
        ]
    }
}
