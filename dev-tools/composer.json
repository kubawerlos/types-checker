{
    "require-dev": {
        "ergebnis/composer-normalize": "^2.3.2",
        "friendsofphp/php-cs-fixer": "^2.16.1",
        "kubawerlos/php-cs-fixer-custom-fixers": "^2.1.0",
        "maglnet/composer-require-checker": "^2.1.0",
        "squizlabs/php_codesniffer": "^3.5.4"
    },
    "scripts": {
        "analyse": [
            "composer validate --strict --working-dir=..",
            "composer normalize --dry-run ../composer.json",
            "composer-require-checker check ../composer.json",
            "phpcs --exclude=Generic.Files.LineLength --ignore=./tests/_stubs --report-full --standard=PSR2 ../src ../tests",
            "php-cs-fixer fix --ansi --diff --dry-run --verbose"
        ],
        "fix": [
            "composer normalize",
            "php-cs-fixer fix --ansi --verbose || return 0"
        ]
    }
}
